<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:gravity="center_horizontal">

    <!-- 图片 -->
    <com.qf.custemview.CircleImageView
        android:id="@+id/iv_sc_pic"
        android:layout_width="@dimen/image_sc_wh"
        android:layout_height="@dimen/image_sc_wh" />

    <!-- 名称 -->
    <TextView
        android:id="@+id/tv_sc_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sc_title_size"/>

    <!-- 热量 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_sc_rl_pic"
            android:layout_width="@dimen/image_rl_wh"
            android:layout_height="@dimen/image_rl_wh" />

        <TextView
            android:id="@+id/tv_sc_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sc_title_m_size"/>

    </LinearLayout>

    <!-- 功效 -->
    <TextView
        android:id="@+id/tv_sc_gx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sc_title_size"
        android:textColor="#88888888"/>

</LinearLayout>